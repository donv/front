<h1>Listing news_items</h1>

<table>
  <tr>
  <% for column in NewsItem.content_columns %>
    <th><%= column.human_name %></th>
  <% end %>
  </tr>
  
<% for news_item in @news_items %>
  <tr>
  <% for column in NewsItem.content_columns %>
    <td><%=h news_item.send(column.name) %></td>
  <% end %>
    <td><%= link_to 'Show', :action => 'show', :id => news_item %></td>
    <td><%= link_to 'Edit', :action => 'edit', :id => news_item %></td>
    <td><%= link_to 'Destroy', { :action => 'destroy', :id => news_item }, :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @news_items %>

<br />

